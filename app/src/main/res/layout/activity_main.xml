<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.basketballcount.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="#000000"
                android:text="Team A" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:id="@+id/scoreForA"
                android:textColor="#000000"
                android:text="0" />
            <Button
                android:id="@+id/button_3A"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:onClick="button3a"
                android:text="+3 points" />
            <Button
                android:id="@+id/button_2A"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:onClick="button2a"
                android:text="+2 points" />
            <Button
                android:id="@+id/button_1A"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="button1a"
                android:layout_width="match_parent"
                android:text="Free Throw" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="Team B" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:id="@+id/scoreForB"
            android:textColor="#000000"
            android:text="0" />
        <Button
            android:id="@+id/button_3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:onClick="button3b"
            android:text="+3 points" />
        <Button
            android:id="@+id/button_2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:onClick="button2b"
            android:text="+2 points" />
        <Button
            android:id="@+id/button_1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:onClick="button1b"
            android:text="Free Throw" />
    </LinearLayout>
    </LinearLayout>
        <Button
            android:id="@+id/reset_Button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:onClick="buttonReset"
            android:textSize="35sp"
            android:background="#00B0FF"
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true"
            android:text="Reset" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
